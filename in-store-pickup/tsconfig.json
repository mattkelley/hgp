{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "es2015", "esnext.asynciterable"],
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2015",
    "outDir": "lib",
    "baseUrl": "./",
    "paths": {
      "@common/*": ["../common/src/*"]
    }
  },
  "references": [{ "path": "../common" }],
  "exclude": ["node_modules"]
}
